<h1>Sign up</h1>
<%= form_for (@user) do |f|%>
<%=render 'shared/error_messages', :object => f.object%>
  <div class = "field">
    <%= f.label :username%><br/>
    <%= f.text_field :name%>
  </div>
  <div class = "field">
    <%= f.label :email%> </br>
    <%= f.text_field :email%>
  </div>
  <div class = "field">
    <%=f.label :password%><br/>
    <%=f.password_field :password%>
  </div>
  <div class = "field">
    <%=f.label :password_confirmation, "confirmation"%><br/>
    <%=f.password_field :password_confirmation%>
  </div>
  <div class ="actions">
    <%=f.submit "sign up"%>
  </div>
  <%end%>


<%= set_focus_to_id 'user_name' %>
