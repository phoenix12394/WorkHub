<%= stylesheet_link_tag 'signInCustom', :media => 'screen'%>
<div id="signInWrapper">
<h1>Sign In</h1>

<%= form_for(:session, :url => sessions_path) do |f|%>
  <div class = "field">
    <%=f.label :email%><br/>
    <%=f.text_field :email%>
  </div>
  <div class = "field">
    <%= f.label :password%> <br/>
    <%=f.password_field :password%>
  </div>
  <div class = "actions">
    <%=f.submit "Sign in"%>
  </div>
<%end%>

<p>New user? <%=link_to "sign up now!", signup_path%></p>

</div>

<%= set_focus_to_id 'session_email' %>
