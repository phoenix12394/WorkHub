<div id="wrapper" class ="micropost_profile" summary = "micropost information">
  <div id="titleHolder">
    <h1>
      <%=@micropost.title%>
    </h1>
    <div id="colorBar"></div>
    <div class ="timestamp">
      Posted <%= time_ago_in_words(@micropost.created_at)%> ago by <%= link_to @micropost.user.name, @micropost.user%>
    </div>
    <div id="locationName">
    Location: <%=@micropost.location.name%> 
    </div>
  </div>
  
  <div id="description">
    <%=@micropost.content%>
  </div>
  <div id="tags">
    
  </div>
  <div id="compensation">
    $<%=@micropost.compensation%> per hour
  </div>
  <div id="information">
    <div id="views">
      233<br/>
      views
    </div>
    <div id="responses">
      2<br/>
      responses
    </div>
  </div>
  <div id="tagsDiv">
    <strong>Tags:</strong> <br/>
    <%if @micropost.tags.count > 0%>
      <% @micropost.tags.each do |tag|%>
      <%=link_to tag.name , tag%>
    <%end%>
    <%else%>
      None.
    <%end%>
  </div>
  
