<tr>
  
    <td class = "gravatar">
    <%= link_to gravatar_for(micropost.user), micropost.user%>
  </td>
  <td class = "micropost">
    
    
    <span class ="title"><%= link_to micropost.title, micropost%></span><br/>

    <span class ="content"><%= micropost.content%></span>
    <span class ="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at)%> ago by <%= link_to micropost.user.name, micropost.user%>
    </span>
    <div id="tagsDiv">
          <strong>Tags:</strong>
      <%if micropost.tags.count > 0%>
        <% micropost.tags.each do |tag|%>
          <%=link_to tag.name , tag%>
       <%end%>
      <%else%>
      None.
      <%end%>
    </div>
  </td>
  <% if current_user?(micropost.user)%>
  <td>
    <%= link_to "delete", micropost, :method => :delete, :confirm => "you sure?", :title => micropost.content%>
  </td>
  <%end%>
  
</tr>
