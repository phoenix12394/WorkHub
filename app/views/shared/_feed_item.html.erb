<tr>
  <td class = "gravatar">
    <%= gravatar_for feed_item.user, :default =>'identicon', :size => 50%>

  </td>
  <td class = "micropost">

    <span class = "title"><%= link_to feed_item.title, feed_item%></span> <br/>
    <span class = "content"><%= feed_item.content.html_safe[0..256] + "..."%></span>


    <div id="tagsDiv">
      <%if feed_item.tags.count > 0%>
        <% feed_item.tags.each do |tag|%>
         <%=link_to tag.name , tag%>
       <%end%>
      <%else%>
      <%end%>
    </div>
    <span class = "timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at)%> ago by <%= link_to feed_item.user.name, feed_item.user%>.
    </span> 
  </td>
  <% if current_user?(feed_item.user)%>
  <td>
    <%= link_to "delete", feed_item, :method => :delete, :confirm => "You sure?", :title => feed_item.content%>
  </td>
  <%end%>
</tr>
